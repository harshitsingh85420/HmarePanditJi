{
  "name": "hmarepanditji",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.1.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "pnpm --filter @hmarepanditji/db generate",
    "db:push": "pnpm --filter @hmarepanditji/db push",
    "db:migrate": "pnpm --filter @hmarepanditji/db migrate",
    "db:seed": "pnpm --filter @hmarepanditji/db seed",
    "db:studio": "pnpm --filter @hmarepanditji/db studio",
    "migrate:sql": "node scripts/migrate.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "turbo": "^2.0.0",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "@playwright/test": "^1.58.2",
    "playwright": "^1.58.2"
  }
}