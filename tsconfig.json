{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@hmarepanditji/ui": ["./packages/ui/src"],
      "@hmarepanditji/db": ["./packages/db/src"],
      "@hmarepanditji/types": ["./packages/types/src"],
      "@hmarepanditji/utils": ["./packages/utils/src"]
    }
  },
  "exclude": ["node_modules"]
}
