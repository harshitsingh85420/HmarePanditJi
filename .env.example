# ============================================================
# HmarePanditJi — Environment Variables
# Copy this file to .env and fill in real values before deploy
# NEVER commit .env to git. Only .env.example.
# ============================================================

# ===== DATABASE =====
DATABASE_URL=postgresql://hpj_user:hpj_password_dev@localhost:5432/hmarepanditji
POSTGRES_USER=hpj_user
POSTGRES_PASSWORD=hpj_password_dev
POSTGRES_DB=hmarepanditji
REDIS_URL=redis://localhost:6379
ELASTICSEARCH_URL=http://localhost:9200
SEARCH_SERVICE_PORT=3005

# ===== pgAdmin (dev only) =====
PGADMIN_DEFAULT_EMAIL=admin@hmarepanditji.com
PGADMIN_DEFAULT_PASSWORD=admin123

# ===== AUTH =====
JWT_SECRET=replace_with_64_character_random_string_minimum_xxxxxxxxxxxxxxx
JWT_REFRESH_SECRET=replace_with_different_64_character_random_string_xxxxxx
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=30d
ENCRYPTION_KEY=replace_with_32_byte_hex_for_aes256_aadhaar_encryption

# ===== RAZORPAY (Payments) =====
RAZORPAY_KEY_ID=rzp_test_placeholder
RAZORPAY_KEY_SECRET=replace_with_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=replace_with_webhook_secret
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_placeholder

# ===== MSG91 (OTP + SMS) =====
MSG91_AUTH_KEY=replace_with_msg91_auth_key
MSG91_SENDER_ID=HMPANDIT
MSG91_OTP_TEMPLATE_ID=replace_with_template_id

# ===== FIREBASE (Push Notifications) =====
FIREBASE_PROJECT_ID=hmarepanditji
FIREBASE_PRIVATE_KEY=replace_with_firebase_private_key
FIREBASE_CLIENT_EMAIL=replace_with_firebase_client_email
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
FIREBASE_ADMIN_SERVICE_ACCOUNT_KEY=path/to/serviceAccountKey.json

# ===== AWS S3 =====
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=replace_with_aws_access_key
AWS_SECRET_ACCESS_KEY=replace_with_aws_secret_key
S3_BUCKET_NAME=hmarepanditji-uploads
CLOUDFRONT_URL=https://replace_with_cloudfront_domain.cloudfront.net

# ===== GOOGLE MAPS =====
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=replace_with_google_maps_key
GOOGLE_MAPS_API_KEY=replace_with_google_maps_key

# ===== BHASHINI (Voice AI) =====
BHASHINI_USER_ID=replace_with_bhashini_user_id
BHASHINI_API_KEY=replace_with_bhashini_api_key
BHASHINI_PIPELINE_ID=replace_with_pipeline_id

# ===== TWILIO (Legacy — use MSG91 for new code) =====
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

