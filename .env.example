# ============================================================
# HmarePanditJi — Environment Variables
# Copy this file to .env and fill in real values before deploy
# ============================================================

# ── Database (PostgreSQL) ────────────────────────────────────
DATABASE_URL="postgresql://hmarepanditji:hmarepanditji_secret@localhost:5432/hmarepanditji?schema=public"
POSTGRES_USER=hmarepanditji
POSTGRES_PASSWORD=hmarepanditji_secret
POSTGRES_DB=hmarepanditji

# ── pgAdmin (dev only) ───────────────────────────────────────
PGADMIN_DEFAULT_EMAIL=admin@hmarepanditji.com
PGADMIN_DEFAULT_PASSWORD=admin123

# ── Firebase Auth ────────────────────────────────────────────
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
FIREBASE_ADMIN_SERVICE_ACCOUNT_KEY=path/to/serviceAccountKey.json

# ── JWT ──────────────────────────────────────────────────────
JWT_SECRET=your_jwt_secret_min_32_chars_long
JWT_EXPIRY=7d

# ── Razorpay ─────────────────────────────────────────────────
# Get keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx

# ── Twilio (SMS + OTP) ───────────────────────────────────────
# Get from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ── Google Maps ──────────────────────────────────────────────
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ── Analytics ────────────────────────────────────────────────
# GA4: https://analytics.google.com → Admin → Data Streams → Measurement ID (G-XXXXXXXXXX)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# Microsoft Clarity: https://clarity.microsoft.com → Settings → Overview → Project ID
NEXT_PUBLIC_CLARITY_ID=your_clarity_project_id
# Google Search Console verification meta tag value
NEXT_PUBLIC_GSC_VERIFICATION=your_gsc_verification_code

# ── WhatsApp ─────────────────────────────────────────────────
# Phone number with country code, no + or spaces (e.g. India +91 XXXXX XXXXX → 91XXXXXXXXXX)
NEXT_PUBLIC_WHATSAPP_NUMBER=91XXXXXXXXXX

# ── API ──────────────────────────────────────────────────────
API_PORT=4000
API_URL=http://localhost:4000/api/v1
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1

# ── App URLs ─────────────────────────────────────────────────
WEB_URL=http://localhost:3000
PANDIT_URL=http://localhost:3001
ADMIN_URL=http://localhost:3002
# Production:
# WEB_URL=https://hmarepanditji.com
# PANDIT_URL=https://pandit.hmarepanditji.com
# ADMIN_URL=https://admin.hmarepanditji.com

# ── Node Environment ─────────────────────────────────────────
NODE_ENV=development
# Production:
# NODE_ENV=production

# ── CORS ─────────────────────────────────────────────────────
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
# Production:
# ALLOWED_ORIGINS=https://hmarepanditji.com,https://pandit.hmarepanditji.com,https://admin.hmarepanditji.com
